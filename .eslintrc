{
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "L": true,
    "Modernizr": true,
    "describe": true,
    "it": true,
    "sinon": true,
    "_": true,
    "before": true,
    "beforeEach": true,
    "afterEach": true
  },
  "rules": {
    "no-extend-native": 2,
    "no-cond-assign": [
      2,
      "except-parens"
    ],
    "curly": [
      2,
      "all"
    ],
    "no-eq-null": 2,
    "eqeqeq": 2,
    "no-unused-expressions": 2,
    "valid-typeof": 2,
    "no-caller": 2,
    "block-scoped-var": 2,
    "strict": 0,
    "no-loop-func": 2,
    "no-empty": 2,
    "dot-notation": 0,
    "no-undef": 2,
    "no-unused-vars": [
      1,
      {
        "args": "none"
      }
    ],
    "no-multi-spaces": 2,
    "no-implicit-coercion": [
      2,
      {
        "number": true,
        "boolean": true,
        "string": true
      }
    ],
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": 2,
    "padded-blocks": [
      2,
      "never"
    ],
    "quote-props": [
      2,
      "as-needed"
    ],
    "key-spacing": 0,
    "space-unary-ops": [
      2,
      {
        "words": false,
        "nonwords": false
      }
    ],
    "no-spaced-func": 2,
    "space-in-parens": [
      2,
      "never"
    ],
    "no-trailing-spaces": 2,
    "yoda": [
      2,
      "never"
    ],
    "camelcase": [
      2,
      {
        "properties": "always"
      }
    ],
    "new-cap": 2,
    "comma-style": [
      2,
      "last"
    ],
    "brace-style": [
      2,
      "stroustrup",
      {
        "allowSingleLine": true
      }
    ],
    "one-var-declaration-per-line": [
      2,
      "initializations"
    ],
    "eol-last": 2,
    "wrap-iife": 2,
    "semi": [
      2,
      "always"
    ],
    "space-infix-ops": 2,
    "space-before-blocks": [
      2,
      "always"
    ],
    "array-bracket-spacing": [
      2,
      "never"
    ],
    "indent": [
      2,
      4,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ]
  }
}
